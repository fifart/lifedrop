<p id="notice"><%= notice %></p>

<h1>Listing Donators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Blood type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donators.each do |donator| %>
      <tr>
        <td><%= donator.name %></td>
        <td><%= donator.email %></td>
        <td><%= donator.blood_type %></td>
        <td><%= link_to 'Show', donator %></td>
        <td><%= link_to 'Edit', edit_donator_path(donator) %></td>
        <td><%= link_to 'Destroy', donator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

